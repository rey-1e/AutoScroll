{
  "manifest_version": 3,
  "name": "AutoScroll",
  "version": "1.0.0",
  "description": "Use middle mouse click to scroll through webpages",
  "minimum_chrome_version": "88",
  "icons": {
    "128": "icon.png",
    "48":  "icon.png"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage"
  ],
  "options_page": "options.html",
  "content_scripts": [{
    "all_frames": false,
    "js": [ "AutoScroll.js" ],
    "matches": [ "<all_urls>" ],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [{
    "resources": [ "*.svg" ],
    "matches": [ "<all_urls>" ]
  }]
}